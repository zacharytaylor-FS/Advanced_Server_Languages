block content
- let product= {"product": products}
  h1 Create a Product
  form(action="/products" method="POST")
    input#date(name="id", type="text")
    fieldset.form-group 
      label(for="title")  Title: 
      input.form-control(name="title", type="text", value='title')
    fieldset.form-group 
      label(for="brand")  Brand: 
      input.form-control(name="brand", type="text", value='brand')
    fieldset.form-group 
      label(for="price")  Price: 
      input.form-control(name="price", type="text", value='price')
    fieldset.form-group 
      label(for="description")  Description: 
      textarea(name="description", type="text", value='description', cols='30', rows='5')
    button(type="submit") Save 
