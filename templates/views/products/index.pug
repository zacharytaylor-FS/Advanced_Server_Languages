extends ../../layouts/base.pug

block content
  h1 About 
   ul 
     li: a(href="/") Show
  div
  .card-container 
    each product in products 
     .card 
       .card-header 
          .card-picture 
            .card-picture-overlay &nbsp;
            img.card-picture-img(src="images/pug.svg", alt="alt" width=180)
          h2
            span= product.title
          p= 'Price: ' + product.price 
          |
          p= product.description 
          button.btn.btn-primary.btn-card(type='button') Button



