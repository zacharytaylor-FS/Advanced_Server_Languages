block content
h1 Create a variant
if !variant
  form(action="/variants" method="POST")
    input#date(name="id", type="hidden", hidden="true")
    fieldset.form-group 
      label(for="product[title]")  Title: 
      input.form-control(name="title", type="text")
    fieldset.form-group 
      label(for="product[price]")  Price: 
      input.form-control(name="price", type="text")
    fieldset.form-group
      label(for='productId') ProductId
      select(name='productId') 
        each product in products
          option(value=product.id) #{product.title}
    fieldset.form-group 
      label(for="description")  Description: 
      textarea(name="description", type="text", value='', cols='30', rows='5')
    button(type="submit") Save  
else
  form(action="/variants" method="POST")
    input#date(name="id", type="text", hidden="true")
    fieldset.form-group 
      label(for="title")  Title: 
      input.form-control(name="title", type="text", value=variant.title)
    fieldset.form-group 
      label(for="price")  Price: 
      input.form-control(name="price", type="text", value=variant.price)
    fieldset.form-group
      label(for='productId') ProductId
      select(name='productId') 
        each product in products
          option(value=product.slug) #{product.title}
    fieldset.form-group 
      label(for="price")  Price: 
      input.form-control(name="price", type="text", value=variant.price)
    fieldset.form-group 
      label(for="description")  Description: 
      input(name="description", type="text", value=variant.description, cols='30', rows='5')
    button(type="submit") Save 
