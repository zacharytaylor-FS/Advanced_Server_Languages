block content
main.main
  if !variant
    h1 Create a variant
    form(action='/variants' method="POST")
      input(name="id", type="text", hidden="true")
      fieldset.form-group 
        label(for="title")  Title: 
        input.form-control(name="title", type="text", value='')
      fieldset.form-group 
        label(for="slug")  Slug: 
        input.form-control(name="slug", type="text", value='')
      fieldset.form-group 
        label(for="price")  Price: 
        input.form-control(name="price", type="text", value='')
      fieldset.form-group 
        label(for="inventory")  Inventory: 
        input.form-control(name="inventory", type="text", value='')
      fieldset.form-group 
        label(for="description")  Description: 
        textarea(name="description", type="text", value='', cols='30', rows='5')
      button(type="submit") Save  
  else
    form(action="/variants/" + variant.id method="POST")
      input#date(name="id", type="text")
      fieldset.form-group 
        label(for="title")  Title: 
        input.form-control(name="title", type="text", value=variant.title)
      fieldset.form-group 
        label(for="slug")  Slug: 
        input.form-control(name="slug", type="text", value=variant.slug)
      fieldset.form-group 
        label(for="price")  Price: 
        input.form-control(name="price", type="text", value=variant.price)
      fieldset.form-group 
        label(for="inventory")  Inventory: 
        input.form-control(name="inventory", type="number", step="1", value=variant.inventory)
      fieldset.form-group 
        label(for="description")  Description: 
        input(name="description", type="text", value=variant.description, cols='30', rows='5')
      button(type="submit") Save 
